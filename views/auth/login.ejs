<div class="container">
    <h5 class="text-center text-uppercase font-weight-bold mb-3">Login</h5>
    <div class="form-login pl-4 pr-4 pt-3 pb-4">
        <form id="loginForm" action="/login" method="post" autocomplete="off">
            <% session.alerts && session.alerts.messages.forEach(function(alert) { %>
                <div class="alert alert-<%= session.alerts.level %> fade show" role="alert">
                    <%= alert %>
                </div>
                <% }); %>
                    <div class="mb-3">
                        <label class="form-label">Username/ Email <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="user" <% if(session.alerts){ %>
                        value="<%= session.input.user %>"
                            <% } %> required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" name="password" <% if(session.alerts){ %>
                        value="<%= session.input.password %>"
                            <% } %> required />
                    </div>
                    <div class="d-grid gap-2 pt-2">
                        <button id="btnLogin" type="submit"
                            class="btn btn-danger text-uppercase btn-block font-weight-bold">Login</button>
                    </div>
        </form>
    </div>
</div>
<% session.alerts=undefined %>
    <%- contentFor('pageTitle') %>
        Login